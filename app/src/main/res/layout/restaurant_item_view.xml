<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/bildDesRestaurants"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_restaurant" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameDesRestaurantsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 1"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/beschreibungDesRestaurantsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adresseDesRestaurantsTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 3"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/websiteDesRestaurantsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 4"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/kategorieDesRestaurantsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 5"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>