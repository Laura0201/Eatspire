<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F1FFF1">
    <!--  Zurück-Button  -->
    <Button android:id="@+id/buttonBackTop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_margin="16dp" android:background="#4CAF50" android:text="Zurück" android:textColor="#000000" android:textStyle="bold"/>
    <!--  Scrollbereich  -->
    <ScrollView android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@id/buttonBackTop" android:layout_above="@id/buttonApply" android:padding="8dp">
        <LinearLayout android:id="@+id/mainContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <!--  Sortieren  -->
            <LinearLayout android:id="@+id/sortContainer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:paddingEnd="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sortieren nach" android:textColor="#006400" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="4dp"/>
                <Spinner android:id="@+id/dropdownSortOptions" android:layout_width="match_parent" android:layout_height="48dp" android:background="#A5D6A7" android:popupBackground="#4CAF50"/>
            </LinearLayout>
            <!--  Filtern  -->
            <LinearLayout android:id="@+id/filterContainer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:orientation="vertical" android:paddingStart="8dp">
                <!--  Allgemeine Filter  -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Allgemeine Filter" android:textColor="#006400" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="4dp"/>
                <CheckBox android:id="@+id/checkboxToGo" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="To-Go möglich" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxOpen" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Geöffnet" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxVegetarian" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Vegetarisch" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <!--  Umkreis  -->
                <TextView android:id="@+id/textRadiusLabel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Umkreis: 10 km" android:textColor="#006400" android:textStyle="bold" android:paddingTop="8dp" android:paddingBottom="4dp"/>
                <SeekBar android:id="@+id/seekBarRadius" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="6" android:progress="2" android:thumbTint="#4CAF50" android:progressTint="#81c784" android:layout_marginBottom="16dp"/>
                <!--  Kategorien  -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Kategorien" android:textColor="#006400" android:textStyle="bold" android:textSize="16sp" android:paddingTop="16dp" android:paddingBottom="4dp"/>
                <CheckBox android:id="@+id/checkboxItalian" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Italienisch" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxAsian" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Asiatisch" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxFastFood" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Fastfood" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxSnacks" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Snacks" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxSpirits" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Spirituosen" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxFrench" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Französisch" android:textColor="#228B22" android:background="@android:color/transparent"/>
                <CheckBox android:id="@+id/checkboxGerman" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:text="Deutsch" android:textColor="#228B22" android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--  Anwenden-Button  -->
    <Button android:id="@+id/buttonApply" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_margin="16dp" android:background="#4CAF50" android:text="Anwenden" android:textColor="#000000" android:textStyle="bold"/>
</RelativeLayout>