<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#d9ead3">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einstellungen"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/aktueller_benutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktueller Benutzername: [aktueller Name]"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/benutzernameAendern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Neuer Benutzername"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:background="#466D1D"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />
</LinearLayout>

